{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "./e.sh cmake --build build_llvm",
            "group": { "kind": "build" }
        },
        {
            "label": "West Build",
            "type": "shell",
            "command": "./e.sh ./build-llvm.sh",
            "group": { "kind": "build" }
        },
        {
            "label": "Flash",
            "type": "shell",
            "command": "./e.sh west flash -d build_llvm"
        },
        {
            "label": "Flash OpenOCD",
            "type": "shell",
            "command": "./flash.exp"
        },
        {
            "label": "Bootloader Flash OpenOCD",
            "type": "shell",
            "command": "./flash_boot.exp"
        },
        {
            "label": "Reset Halt OpenOCD",
            "type": "shell",
            "command": "./reset_halt.exp"
        },
        {
            "label": "Reset OpenOCD",
            "type": "shell",
            "command": "./reset.exp"
        },
        {
            "label": "Kill Screen",
            "type": "shell",
            "options": {
                "detached": true
            },
            "command": "killall cat"
        }
    ]
}
